<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mayer.dao.UserMapper">
	
	<select id="getUserByName" resultType="com.mayer.beans.User">
		select id, user_name userName, password  from user where user_name = #{userName}
	</select>
	
	
	
</mapper>